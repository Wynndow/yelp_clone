- if @restaurants.any?
  - @restaurants.each do |restaurant|
    %h2= link_to restaurant.name, restaurant_path(restaurant)
    - if (@current_user != nil) && (@current_user.restaurants.include? restaurant)
      %h2= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant)
      %h2= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete
    %h2= link_to "Review #{restaurant.name}", new_restaurant_reviews_path(restaurant)

    %h3
      Reviews for
      = restaurant.name
      - if restaurant.reviews.any?
        %ul
          - restaurant.reviews.each do |review|
            %li
              = review.thoughts
              %strong= review.rating
              \/5
      - else
        %p No reviews

- else
  %h1 No restaurants yet!


=link_to 'Add a restaurant', new_restaurant_path
